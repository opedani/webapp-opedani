extends layout.pug

block head-content
    link(rel='stylesheet' href='/css/anime-results.css')
    script(src='/js/scripts/anime-results.js' type='module')

block main-content
    div.anime-results-feedback
        div Query: #{query}
        div Results: #[span#anime-results-count 0]
    div.anime-results#anime-results
    button.anime-results-load.util-hidden#anime-results-load
        i.fa-solid.fa-arrow-down.fa-2x