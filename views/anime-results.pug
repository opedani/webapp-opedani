extends layout.pug

block head-content
    link(rel='stylesheet' href='/css/anime-results.css')
    script(src='/js/scripts/anime-results.js' type='module')

block main-content
    h1 Matched #{count} anime...
    div.anime-results
        div.anime-results-item
            button.anime-results-go
                i.fa-solid.fa-eye.fa-2x
            img.anime-results-thumbnail(src='/images/thumbnail.jpg' alt='Steins;Gate')
            div.anime-results-info
                h2 Steins;Gate
    button.anime-results-load#anime-results-load
        i.fa-solid.fa-arrow-down.fa-2x