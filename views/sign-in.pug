extends layout

block head-content
    link(rel='stylesheet' href='/stylesheets/sign-in.css')

block body-content
    script(src='/scripts/sign-in.js' type='module')

block main-content
    div.center-frame
        header.icon-text
            i.fa-solid.fa-arrow-right-to-bracket.fa-2x
            h1 Sign In
        form.column#form
            label(for='email') Email
            input(type='email' autocomplete='off' spellcheck='false' required)#email
            label(for='password') Password
            input(type='password' autocomplete='off' spellcheck='false' required)#password
            button(type='submit').button-box Sign In
        a(href='/sign-up') No account? No problem. Sign up instead.