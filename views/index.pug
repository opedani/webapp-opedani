extends layout.pug

block head-content
    link(rel='stylesheet' href='/css/index.css')
    script(src='/js/scripts/index.js' type='module')

block body-content
    div.index-wrapper
        div.index-title OpEdAni
        div.index-subtitle Anime Openings & Endings
        div.index-search-wrapper
            div.index-search-button-wrapper
                i.fa-solid.fa-magnifying-glass.fa-3x
            div.index-search-input-wrapper
                input.index-search-input(type='text')
        div.index-autocomplete-wrapper
            div.index-autocomplete-none No results