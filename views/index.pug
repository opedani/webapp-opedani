extends layout.pug

block head-content
    link(rel='stylesheet' href='/css/index.css')
    script(src='/js/scripts/index.js' type='module')

block main-content
    form.searchbar#index-searchbar
        button(type='submit')
            i.fa-solid.fa-magnifying-glass.fa-3x
        input(type='text' placeholder='Search anime...' autocomplete='off').searchbar-input#index-searchbar-input
    div.autocomplete.hidden#index-autocomplete