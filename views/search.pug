extends layout

block head-content
    title OpEdAni: Search
    link(rel='stylesheet' href='/stylesheets/views/search.css')

block body-content
    script(src='/scripts/views/search.js' type='module')

block main-content
    div.background
        div.clamp.flex-column.gap.padding-large
            form#search-form.search-form
                div.flex-column.gap
                    label(for='search-query') Query
                    input#search-query(type='text' placeholder='Search...' autocomplete='off' spellcheck='false')
                div.flex-column.gap
                    label(for='search-category') Category
                    select#search-category
                        option(value='anime' selected) Anime
                        option(value='song') Song
                        option(value='user') User
            p.subtle Results: #[span#search-result-count 0]
    div#search-result-container.search-result-container